@page
@model RegisterModel
<link rel="stylesheet" href="~/css/style.css">
@{
    ViewData["Title"] = "Welcome!";
}



<div class="row">
    <div class="col-md-4">
        <section>
        </br>
        <h1>@ViewData["Title"]</h1>
        </br>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label" style="background-color:transparent;border:none;padding-top:15px;">Email</label>                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" style="background-color:transparent;border:none;padding-top:15px;">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" style="background-color:transparent;border:none;padding-top:15px;">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
